<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="400dp"
    tools:context="ua.mycompany.lesson_4_alarmclock.MainActivity">

    <TimePicker
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/timePickerForAlarm"
        android:longClickable="true"
        android:minHeight="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on alarm"
        android:id="@+id/btnTurnOn"
        android:layout_below="@+id/timePickerForAlarm"
        android:layout_alignLeft="@+id/timePickerForAlarm"
        android:layout_alignStart="@+id/timePickerForAlarm"
        android:layout_alignParentStart="false"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off alarm"
        android:id="@+id/btnTurnOff"
        android:layout_below="@+id/timePickerForAlarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Did you set Alarm?"
        android:id="@+id/updateText"
        android:layout_alignBottom="@+id/timePickerForAlarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
